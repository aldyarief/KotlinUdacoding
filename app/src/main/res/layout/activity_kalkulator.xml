<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context=".Kalkulator">

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="#48a932">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/edtinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Isikan tinggi badan (m)"
            android:padding="10dp"
            android:inputType="number|numberDecimal" />

        <EditText
            android:id="@+id/edberat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isikan berat badan (kg)"
            android:inputType="number"
            android:padding="10dp"
            android:layout_gravity="center" />


        <Button
            android:id="@+id/btnHitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEK BMI"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#4169E1" />

        <TextView
            android:id="@+id/txhasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4169E1"
            android:textSize="28sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:fontFamily="sans-serif" />
    </LinearLayout>


</LinearLayout>