<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".detail.BatikDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBatik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/detailNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nama lokasi"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="#0347F4"
                android:layout_below="@id/imgBatik"/>

            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:background="#0347F4"
                android:id="@+id/garis"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/judulDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="#25000000"
                android:layout_below="@id/garis"/>

            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="#000"
                android:layout_below="@id/judulDes"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/judulharga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="#25000000"
                android:layout_below="@id/deskripsi"/>

            <TextView
                android:id="@+id/hargamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nama lokasi"
                android:textSize="20sp"
                android:layout_below="@id/judulharga"/>

            <TextView
                android:id="@+id/hargamax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nama lokasi"
                android:textSize="20sp"
                android:layout_below="@id/hargamin"/>

        </LinearLayout>
</RelativeLayout>
